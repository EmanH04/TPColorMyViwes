<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/box_one_text"
        style="@style/WhiteBox"
        android:layout_width="489dp"
        android:layout_height="35dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="@dimen/margin_wide"
        android:text="@string/box_one"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/box_two_text"
        style="@style/WhiteBox"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_marginTop="16dp"
        android:text="@string/box_two"
        app:layout_constraintTop_toBottomOf="@+id/box_one_text"
        tools:layout_editor_absoluteX="32dp" />

    <TextView
        android:id="@+id/box_trois"
        style="@style/WhiteBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/box_trois"
        app:layout_constraintBottom_toTopOf="@+id/box_cinq"
        app:layout_constraintTop_toBottomOf="@+id/box_one_text"
        tools:layout_editor_absoluteX="321dp" />

    <TextView
        android:id="@+id/box_quatre"
        style="@style/WhiteBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:text="@string/box_quatre"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:layout_editor_absoluteX="321dp" />

    <TextView
        android:id="@+id/box_cinq"
        style="@style/WhiteBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/box_cinq"
        app:layout_constraintBottom_toTopOf="@+id/box_quatre"
        app:layout_constraintTop_toBottomOf="@+id/box_trois"
        tools:layout_editor_absoluteX="323dp" />

</androidx.constraintlayout.widget.ConstraintLayout>